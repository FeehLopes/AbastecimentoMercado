@using VideoLocadora.Models
@{
    ViewBag.Title = "BuscarReservas";
}

<h2>Buscar Reservas</h2>

<body id="body">
    @using (Html.BeginForm("BuscarReservas", "Reserva", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizonta">

            <hr />
            <div class="form-group">
                @Html.Label("Nome:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" name="nome" class="form-control" />

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Search" class="btn btn-default" />
                </div>
            </div>
        </div>
        if (Session["lista"] != null)
        {
            <table class="table">
                <tr>
                    <th>
                        <h5 style="text-align:center">Nome Cliente</h5>
                    </th>
                    <th>
                        <h5>Titulo</h5>
                    </th>
                    <th>
                        <h5>Descrição</h5>
                    </th>
                    

                </tr>

                @foreach (Reserva item in ViewBag.Lista)
                {
                    <tr>

                        <td>
                            <h5> @item.NomeCliente</h5>
                        </td>
                        <td>
                            <h5>  @item.Titulo</h5>
                        </td>
                        <td>
                            <h5>  @item.Descrição</h5>
                        </td>
                        

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ReservaId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ReservaId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ReservaId })
                        </td>
                    </tr>
                }

            </table>

        }
        else
        {
            <h4 style="text-align:center">@ViewBag.Message</h4>
        }


        <p>
            @Html.ActionLink("Back to List", "Index")
        </p>
    }


</body>
